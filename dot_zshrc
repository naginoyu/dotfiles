eval "$(sheldon source)"
eval "$(starship init zsh)"

case ${OSTYPE} in
    darwin*)
    # setting for mac
    . /usr/local/opt/asdf/libexec/asdf.sh
    ;;
linux*)
    # setting for linux
    . /opt/asdf-vm/asdf.sh
    ;;
esac

export LANG=ja_JP.UTF-8

autoload -Uz colors
colors

autoload -Uz compinit
compinit

bindkey -e

setopt share_history

setopt histignorealldups

HISTFILE=~/.zsh_history
HISTSIZE=1000000
SAVEHIST=1000000

setopt auto_cd

setopt auto_pushd

setopt pushd_ignore_dups

setopt correct

# zsh aliases
alias vz="vim ~/.zshrc"
alias sz="source ~/.zshrc"
alias rmf="rm -rf"

# ls
alias ll="ls -l"
alias la="ls -a"

# git
alias g="git"
eval "$(zellij setup --generate-auto-start zsh)"
